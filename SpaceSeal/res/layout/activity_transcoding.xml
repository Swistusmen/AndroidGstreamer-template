<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout      xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Transcoding"
    android:background="@color/normalBackground">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/settingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transcoder"
            android:textSize="60px"
            android:background="@color/topBarBackground"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/buttons"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="File:"
                android:textSize="60px"
                android:layout_margin="5px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="File"
                    android:textSize="60px"
                    android:layout_margin="5px"
                    android:id="@+id/fileToTranscode"/>
            </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@color/greenAccept"
                    android:layout_gravity="right"
                    android:text="Choose File"
                    android:textSize="50px"
                    android:id="@+id/chooseFileToTranscode"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textSize="60px"
                android:text="Choose codec:"
                android:layout_margin="5px"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AV1"
                android:id="@+id/AV1Format"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H264"
                android:id="@+id/H264Format"
                android:checked="true"/>
        </RadioGroup>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@color/greenAccept"
                android:layout_gravity="right"
                android:text="Transcode a video"
                android:textSize="50px"
                android:id="@+id/TranscodeVideoButton"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="70px"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:id="@+id/informationTranscodig"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>